  </div>

  <div>
    <%= form.label :is_moderator, style: "display: block" %>
    <%= form.check_box :is_moderator %>
  </div>

  <div>
    <%= form.label :is_published, style: "display: block" %>
    <%= form.check_box :is_published %>
  </div>

  <div>
    <%= form.label :bio, style: "display: block" %>
    <%= form.rich_text_area :bio %>
  </div>

  <div>
    <%= form.label :url, style: "display: block" %>
    <%= form.text_field :url %>
  </div>

  <div>
    <%= form.label :profile_image, style: "display: block" %>
